(package-begin com.io7m.r2.core.cursors)

(record R2VertexPUNT16 [
  (field position [vector [float 16] 3])
  (field uv       [vector [float 16] 2])
  (field normal   [vector [float 16] 3])
  (field tangent  [vector [float 16] 4])
])

(record R2VertexPUNT32 [
  (field position [vector [float 32] 3])
  (field uv       [vector [float 32] 2])
  (field normal   [vector [float 32] 3])
  (field tangent  [vector [float 32] 4])
])

(record R2VertexP32UNT16 [
  (field position [vector [float 32] 3])
  (field uv       [vector [float 16] 2])
  (field normal   [vector [float 16] 3])
  (field tangent  [vector [float 16] 4])
])

(record R2RGBA8 [
  (field color_r [integer unsigned 8])
  (field color_g [integer unsigned 8])
  (field color_b [integer unsigned 8])
  (field color_a [integer unsigned 8])
])

(record R2VertexP32RGBA8 [
  (field position [vector [float 32] 3])
  (field color    R2RGBA8)
])

(package-end)
